<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.navigation.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:id="@+id/txt00" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="2"
        android:id="@+id/txt01"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_alignBaseline="@+id/txt00"
        android:layout_alignBottom="@+id/txt00"
        android:layout_toRightOf="@+id/txt00"
        android:layout_toEndOf="@+id/txt00" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="2"
        android:layout_alignTop="@+id/txt01"
        android:layout_toRightOf="@+id/txt01"
        android:layout_toEndOf="@+id/txt01"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/txt02" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="2"
        android:layout_below="@+id/txt00"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/txt10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="2"
        android:layout_alignBottom="@+id/txt10"
        android:layout_alignLeft="@+id/txt01"
        android:layout_alignStart="@+id/txt01"
        android:id="@+id/txt11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="2"
        android:id="@+id/txt12"
        android:layout_alignBaseline="@+id/txt11"
        android:layout_alignBottom="@+id/txt11"
        android:layout_alignLeft="@+id/txt02"
        android:layout_alignStart="@+id/txt02" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="2"
        android:layout_marginTop="32dp"
        android:id="@+id/txt20"
        android:layout_below="@+id/txt10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="2"
        android:layout_alignTop="@+id/txt20"
        android:layout_toRightOf="@+id/txt20"
        android:layout_toEndOf="@+id/txt20"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/txt21" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="2"
        android:layout_alignTop="@+id/txt21"
        android:layout_alignLeft="@+id/txt12"
        android:layout_alignStart="@+id/txt12"
        android:id="@+id/txt22" />

    <Button
        android:text="Matrix B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnB"
        android:layout_below="@+id/txt12"
        android:layout_alignLeft="@+id/btnA"
        android:layout_alignStart="@+id/btnA" />

    <Button
        android:text="Matrix Addition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Matrix A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="27dp"
        android:id="@+id/btnA"
        android:layout_alignTop="@+id/txt02"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Matrix Multiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnMul"
        android:layout_below="@+id/btnAdd"
        android:layout_alignLeft="@+id/txt11"
        android:layout_alignStart="@+id/txt11"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />


</RelativeLayout>
